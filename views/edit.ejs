<%- include('partials/header.ejs') %>

    <div class="main">
        <form action="/" method="POST">
            <input class="text-area tertiary-color" type="text" name="title" placeholder="Title" value="<%= title %>">
            <textarea class="text-area tertiary-color" rows="15" cols="60" wrap="hard" name="body" placeholder="Body"><%= body %></textarea>
            <div class="buttons-container">
                <input class="button secondary-color primary-text-color" type="submit" value="Save">
                <a href="/?id=<%= id %>&action=delete">
                    <input class="button cancel-button primary-text-color" type="button" value="Delete">
                </a>
            </div>
            <input type="hidden" name="id" value="<%= id %>">
        </form>
    </div>

<%- include('partials/footer.ejs') %>